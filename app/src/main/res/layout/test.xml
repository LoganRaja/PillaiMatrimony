<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:gravity="bottom"
    android:paddingTop="20dp"
    android:background="#cdcdcd">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@drawable/user"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:background="@drawable/parallelogram"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/txt_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Edit Profile"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>

    </LinearLayout>
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:background="@drawable/parallelogram1"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/txt_view_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="View Profile"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:background="@drawable/parallelogram"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/txt_edit_preference"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Edit Preference"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:background="@drawable/parallelogram1"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/txt_view_preference"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="View Preference"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>