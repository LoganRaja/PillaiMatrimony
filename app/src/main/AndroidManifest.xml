<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.compunet.pillaimatrimony">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:theme="@style/ThemeNoAnimation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:theme="@style/ThemeNoAnimation" />
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.Transparent" />
        <activity
            android:name=".DetailActivity"
            android:label="Profile Update"
            android:theme="@style/AppThemeActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name=".PreferenceActivity"
            android:label="Preference"
            android:theme="@style/AppTheme.Transparent" />


        <activity
            android:name=".PreferenceDetailActivity"
            android:label="Preference Update"
            android:theme="@style/AppThemeActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />


        <activity
            android:name=".GalleryActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PhotoActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SelectedPhotosActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".BottomNavigationActivity"
            android:label="@string/title_activity_bottom_navigation"
            android:theme="@style/AppTheme"></activity>

        <activity android:name=".TermsConditionsActivity"></activity>
        <activity android:name=".PinchZoomActivity"></activity>

    </application>

</manifest>